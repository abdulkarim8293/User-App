<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/item_cart_product_image_view"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_cart_product_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:text="Product Name"
                    android:textColor="#000000"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/item_cart_product_clear_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_close_24"
                    android:padding="5dp"
                    android:text="Clear"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_cart_product_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Product Price" />

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/item_cart_sub_total_text_view"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:paddingTop="5dp"
                   android:paddingBottom="5dp"
                   android:layout_weight="1"
                   android:layout_gravity="center_vertical"
                   android:text="Sub Total" />

               <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                   android:id="@+id/btn_quantity"
                   android:layout_width="130dp"
                   app:backGroundColor="@color/colorAccent"
                   app:textSize="8sp"
                   app:initialNumber="1"
                   app:finalNumber="20"
                   android:layout_height="45dp" />
           </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>