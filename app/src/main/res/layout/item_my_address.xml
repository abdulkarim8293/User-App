<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#E3E2E2"
    android:orientation="vertical"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:padding="5dp"
        android:id="@+id/item_address_ll_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_address_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Name"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/item_address_phone_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number" />

        <TextView
            android:id="@+id/item_address_city_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address City" />

        <TextView
            android:id="@+id/item_address_address_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address" />
        <TextView
            android:id="@+id/item_address_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type" />


    </LinearLayout>


</androidx.cardview.widget.CardView>